@model IEnumerable<_1811061230_TranPhanMinhTruong_BigShool.Models.Course>

@{
    ViewBag.Title = "Home Page";
}
<link rel="stylesheet" href="~/Content/Site.css">

<div class="row">
    <div class="course">
        <ul>
            @foreach (var course in Model)
            {
                <li>
                    @*<div class=" date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>

                        <div class="day">
                            @course.DateTime.ToString("dd")
                        </div>



                    </div>*@
                    <div class="details">
                        <span class="lecturer">
                            @course.DateTime -
                            @course.Lecturer.Name
                        </span>




                        <span class="category">
                            @*@course.DateTime -*@
                            @course.Category.Name
                        </span>


                        <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">
                            Going?

                        </button>

                    </div>


                </li>
            }
        </ul>

        @section scripts{
            <script>
                $(function () {
                    $('.js-toggle-attendance').click(function (e) {
                        var button = $(e.target);
                        $.post("/api/attendances", { CourseId: button.attr("data-course-id") }).done(function () {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        }).fail(function () {
                            alert("Something failed");
                        });
                    });


